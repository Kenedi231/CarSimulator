<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constraintLayout"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="314dp"
            android:layout_height="83dp"
            android:text="@string/how_are_you"
            android:textSize="30sp"
            android:layout_margin="5sp"
            android:id="@+id/engine_text"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="92dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.02"
            tools:ignore="MissingConstraints" android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.15"/>

    <Button android:text="Engine"
            android:id="@+id/ToggleEngine"
            android:layout_width="110dp"
            android:layout_height="55dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="8dp" android:layout_marginRight="40dp"/>

    <TextView
            android:layout_width="314dp"
            android:layout_height="83dp"
            android:text="@string/how_are_you"
            android:textSize="30sp"
            android:layout_margin="5sp"
            android:id="@+id/gear_text"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="92dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.132"
            tools:ignore="MissingConstraints" android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.15"/>

    <Button android:text="Change"
            android:id="@+id/setGear"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:onClick="showGearsList"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.11"
            android:layout_marginTop="8dp" android:layout_marginRight="5dp"/>

    <TextView
            android:layout_width="314dp"
            android:layout_height="83dp"
            android:text="@string/how_are_you"
            android:textSize="30sp"
            android:layout_margin="5sp"
            android:id="@+id/speed_text"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="92dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.259"
            tools:ignore="MissingConstraints" android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.15"/>

    <Button android:text="Change"
            android:id="@+id/setSpeed"
            android:layout_width="110dp"
            android:layout_height="55dp"
            android:onClick="showSpeedEditField"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.23"
            android:layout_marginTop="8dp" android:layout_marginRight="5dp"/>

    <TextView
            android:layout_width="314dp"
            android:layout_height="83dp"
            android:text="@string/how_are_you"
            android:textSize="30sp"
            android:layout_margin="5sp"
            android:id="@+id/direction_text"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="92dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.371"
            tools:ignore="MissingConstraints" android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.15"/>


</androidx.constraintlayout.widget.ConstraintLayout>